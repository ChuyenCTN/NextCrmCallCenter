<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.addcontact.AddContactActivity">

    <RelativeLayout
        android:id="@+id/toolBarNote"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar">

        <ImageView
            android:id="@+id/imgBackAddContact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_press_icon_toolbar"
            android:clickable="true"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen10"
            android:src="@drawable/ic_baseline_arrow_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:fontFamily="@font/sfprodisplay_medium"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/dimen4"
            android:text="@string/txt_add_contact"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen20"
            android:paddingTop="@dimen/dimen18">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="@string/txt_company"
                android:textColor="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <EditText
                android:id="@+id/edCompanyAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:backgroundTint="@color/color_hint_add_contact"
                android:fontFamily="@font/sfprodisplay_regular"
                android:hint="@string/txt_company"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="4"
                android:paddingHorizontal="@dimen/dimen6"
                android:textColor="@color/black"
                android:textColorHint="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen14"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="@string/txt_name"
                android:textColor="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <EditText
                android:id="@+id/edNameAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:backgroundTint="@color/color_hint_add_contact"
                android:fontFamily="@font/sfprodisplay_regular"
                android:hint="@string/txt_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="4"
                android:paddingHorizontal="@dimen/dimen6"
                android:textColor="@color/black"
                android:textColorHint="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen14"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="@string/txt_extension"
                android:textColor="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <EditText
                android:id="@+id/edExtensionAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:backgroundTint="@color/color_hint_add_contact"
                android:fontFamily="@font/sfprodisplay_regular"
                android:hint="@string/txt_extension"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="4"
                android:paddingHorizontal="@dimen/dimen6"
                android:textColor="@color/black"
                android:textColorHint="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen14"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="@string/txt_number_phone"
                android:textColor="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <EditText
                android:id="@+id/edPhoneNumberAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:backgroundTint="@color/color_hint_add_contact"
                android:fontFamily="@font/sfprodisplay_regular"
                android:hint="@string/txt_number_phone"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLines="4"
                android:paddingHorizontal="@dimen/dimen6"
                android:textColor="@color/black"
                android:textColorHint="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen14"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="@string/txt_email"
                android:textColor="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <EditText
                android:id="@+id/edEmailAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:backgroundTint="@color/color_hint_add_contact"
                android:fontFamily="@font/sfprodisplay_regular"
                android:hint="@string/txt_email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="4"
                android:paddingHorizontal="@dimen/dimen6"
                android:textColor="@color/black"
                android:textColorHint="@color/color_hint_add_contact"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/btnAddContact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen46"
                android:layout_marginTop="@dimen/dimen160"
                android:background="@drawable/bg_login_button"
                android:clickable="true"
                android:fontFamily="@font/sfprodisplay_regular"
                android:gravity="center"
                android:text="@string/txt_add_contact"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp17" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>